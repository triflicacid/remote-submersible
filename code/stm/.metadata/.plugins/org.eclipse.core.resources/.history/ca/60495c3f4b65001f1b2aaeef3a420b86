/* Private variables ---------------------------------------------------------*/
ADC_HandleTypeDef hadc1;
DMA_HandleTypeDef hdma_adc1;

/* USER CODE BEGIN PV */
timed_lock_t send_code_lock, req_code_lock, release_pod_lock, tristate_lock;
volatile uint32_t n_send_code = 0, n_req_code = 0, n_release_pod = 0;
volatile tristate_t tristate = TRISTATE_UNDEF;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
static void MX_ADC1_Init(void);
/* USER CODE BEGIN PFP */

