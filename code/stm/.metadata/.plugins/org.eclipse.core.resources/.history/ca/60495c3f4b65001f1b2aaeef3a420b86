/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void HAL_GPIO_EXTI_Callback(uint16_t pin) {
  switch (pin) {
  case SendCode_Pin:
	  timed_lock_call(&send_code_lock, HAL_GetTick());
	  break;
  case TriState_Up_Pin:
  case TriState_Down_Pin:
	  timed_lock_call(&tristate_lock, HAL_GetTick());
	  break;
  }
}

void on_send_code(void) {
	n_send_code++;
}

void on_request_code(void) {
	n_req_code++;
}

void on_release_pod(void) {
	n_release_pod++;
}

// handler to tri-state switch toggle
void on_tristate_toggle(void) {
	// read switch position
	tristate_t switch_position = read_tristate_pins(TriState_Down_GPIO_Port, TriState_Down_Pin, TriState_Up_GPIO_Port, TriState_Up_Pin);

	// calculate new state using switch as the transition
	tristate = tristate_transition(tristate, switch_position);
}

void setup(void) {
	timed_lock_init(&send_code_lock, 10, on_send_code);
	timed_lock_init(&req_code_lock, 10, on_request_code);
	timed_lock_init(&release_pod_lock, 10, on_release_pod);
	timed_lock_init(&tristate_lock, 10, on_tristate_toggle);
}

void loop(void) {

}
/* USER CODE END 0 */

